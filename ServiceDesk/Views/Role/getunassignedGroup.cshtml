
@{
    ViewBag.Title = "Unassigned in Group";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var group = @Html.Raw(ViewData["Group"]);
            var tickets = @Html.Raw(ViewData["UnassignedGroup"]);

            $('#heading').text("New tickets in " + group["Group_Name"]);

            $.each(tickets, function (index, element) {
                $('#content').append(
                        '<div  class="card" style="width: 18rem;"><div class="card-body"><h5 class="card-title">'
                        + element.Ticket_ID + '</h5><h6 class="card-subtitle mb-2 text-muted">'
                    + element.Status_Info + '</h6><p class="card-text">' + element.Title + '</p><a href="/Ticket/getTicket/' + element.Ticket_ID + '" ' + 'class="btn btn-secondary">View Ticket</a></div></div>'
                );
            });
        });
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <style>
        body {
            background-image: url('../../Images/r17a.jpg');
            background-attachment: fixed;
            background-size: 100% 100%;
        }

        .a1 {
            position: absolute;
            top: 10%;
            left: 5%;
        }

        h2 {
            color: aliceblue;
        }

        .a2 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }

        .a4 {
            position: absolute;
            top: 60%;
        }

        span {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
    </style>
</head>

<body>
    <div class="a1">
        <h2 id="heading"></h2>
        <div class="a2" id="content">

        </div>
    </div>
</body>




